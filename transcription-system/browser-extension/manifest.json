{
  "manifest_version": 3,
  "name": "Transcription System Cookie Helper",
  "version": "2.0.0",
  "description": "Automatic cookie handling for protected YouTube content in transcription system",
  "author": "Transcription System Team",
  
  "permissions": [
    "cookies",
    "activeTab",
    "storage",
    "downloads",
    "tabs",
    "notifications",
    "alarms"
  ],
  
  "host_permissions": [
    "*://*/*",
    "http://localhost:3002/*",
    "https://localhost:3002/*",
    "https://ylbh.co.il/*",
    "http://ylbh.co.il/*"
  ],
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "http://localhost:3002/*",
        "https://localhost:3002/*",
        "https://ylbh.co.il/*",
        "http://ylbh.co.il/*"
      ],
      "js": ["content/content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Cookie Helper - מערכת התמלול",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["popup/*", "content/*"],
      "matches": ["*://*/*"]
    }
  ]
}