# Backend Production Configuration Template
# Copy this file to .env.production and fill with actual values
NODE_ENV=production
PORT=5000

# Security - MUST CHANGE THESE!
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_64_CHAR_STRING
API_KEY=CHANGE_THIS_TO_A_STRONG_API_KEY

# Database Configuration
DB_HOST=your-database-host
DB_PORT=5432
DB_NAME=transcription_prod
DB_USER=your-db-user
DB_PASSWORD=your-strong-db-password
DB_SSL=true

# CORS - Set to your actual frontend domain
FRONTEND_URL=https://your-domain.com

# Development Tools - MUST BE FALSE IN PRODUCTION
ENABLE_DEV_TOOLS=false